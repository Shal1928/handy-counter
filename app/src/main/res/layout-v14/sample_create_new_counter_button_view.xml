<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ru.shal1928.handy_counter.widgets.CreateNewCounterButtonView
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:paddingLeft="20dp"
            android:paddingBottom="40dp"
            app:exampleDimension="24sp"
            app:exampleColor="#33b5e5"
            app:exampleString=""
            app:exampleDrawable="@android:drawable/ic_menu_add" android:paddingRight="20dp" android:paddingTop="0dp"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top" android:rowCount="12"
                android:columnCount="1" android:id="@+id/grid">
                <EditText
                        android:layout_width="236dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText" android:text="@string/new_counter"
                        android:hint="@string/new_counter_hint" android:gravity="left|center_vertical|start"
                        android:labelFor="@color/new_counter_label" android:background="@color/background_material_light"
                        android:padding="5dp" android:singleLine="true" android:editable="true"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Create_button"
                        android:id="@+id/button" android:gravity="end|right" android:width="110dp"
                        android:textAlignment="center"/>
        </LinearLayout>

</FrameLayout>

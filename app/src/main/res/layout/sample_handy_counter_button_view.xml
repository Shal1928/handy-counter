<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ru.shal1928.handy_counter.widgets.HandyCounterButtonView
            android:background="#ccc"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:paddingLeft="20dp"
            android:paddingBottom="40dp"
            app:exampleDimension="24sp"
            app:exampleColor="#33b5e5"
            app:exampleString="Hello, HandyCounterButtonView"
            app:exampleDrawable="@android:drawable/ic_menu_add">

            <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_gravity="left|top">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Large Text"
                            android:id="@+id/textView" android:layout_row="5" android:layout_column="5"/>
            </GridLayout>


    </ru.shal1928.handy_counter.widgets.HandyCounterButtonView>

</FrameLayout>
